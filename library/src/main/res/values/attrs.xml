<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ContactListView">
        <attr name="show_header" format="boolean"></attr>
        <attr name="contact_row_background" format="color"></attr>
        <attr name="contact_row_text_color" format="color"></attr>
        <attr name="contact_row_text_size" format="dimension"></attr>
        <attr name="contact_row_divider_color" format="color"></attr>
        <attr name="row_divider_height" format="dimension"></attr>
        <attr name="show_avatar" format="boolean"></attr>
        <attr name="avatar_size" format="dimension"></attr>
        <attr name="show_loader" format="boolean"></attr>
        <attr name="show_name_only" format="boolean"></attr>
        <attr name="contact_background" format="color"></attr>
        <attr name="multiselect_enable" format="boolean"></attr>
        <attr name="search_enable" format="boolean"></attr>
        <attr name="header_bg_color" format="color"></attr>


        <!-- Whether or not to draw a circular border around the image. -->
        <attr name="avatar_border" format="boolean" />
        <!-- The color of the border draw around the image. (if enabled) -->
        <attr name="avatar_borderColor" format="color" />
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="avatar_borderWidth" format="dimension" />
        <!-- Whether or not to draw a selector on this view upon touch events. -->
        <attr name="avatar_selector" format="boolean" />
        <!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="avatar_selectorColor" format="color" />
        <!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="avatar_selectorStrokeColor" format="color" />
        <!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="civ_selectorStrokeWidth" format="dimension" />
        <!-- Whether or not to draw a shadow around your circular image. -->
        <attr name="avatar_shadow" format="boolean" />
        <!-- The radius for the shadow to extend to. (if enabled) -->
        <attr name="avatar_shadowRadius" format="float" />
        <!-- Horizontal shadow offset. (if enabled) -->
        <attr name="avatar_shadowDx" format="float" />
        <!-- Vertical shadow offset. (if enabled) -->
        <attr name="avatar_shadowDy" format="float" />
        <!-- The color of the shadow drawn around your circular image. (if enabled) -->
        <attr name="avatar_shadowColor" format="color" />
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="ContactStyle" format="reference" />
    </declare-styleable>
</resources>